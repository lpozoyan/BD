<Window x:Class="VovaBD.AddUserwindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VovaBD"
        mc:Ignorable="d"
        Title="AddUserwindows" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Margin="5" Background="Brown">Введите имя</Label>
                <TextBox Margin="5" Name="tbName"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label Margin="5" Background="Brown">Введите логин</Label>
                <TextBox  Margin="5"  Name="tbLogin"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label Margin="5" Background="Brown">Введите пароль</Label>
                <TextBox  Margin="5"  Name="tbPassword"></TextBox>
            </StackPanel>
            <Button Margin="5" Click="Button_Click" >Регистрация</Button>
        </StackPanel>
        
      
    
    
    </Grid>
</Window>
