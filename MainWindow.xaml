<Window x:Class="VovaBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VovaBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            
            
         
            
                <StackPanel>
                    <Label Margin="5" Background="Aqua">Введите логин</Label>
                    <TextBox Margin="5" Name="tblogin" ></TextBox>
                </StackPanel>
            
                <StackPanel>
                    <Label Margin="5" Background="Aqua">Введите пороль</Label>
                    <TextBox Margin="5" Name="tbpassword" ></TextBox>
                </StackPanel>
            <StackPanel>
                <Button Margin="5" Name="tbnGo" Click="tbnGo_Click">Вход</Button>
                <Button Margin="5" Name="tbnAdd" Click="tbnAdd_Click">Регистрация</Button>
            </StackPanel>


        </StackPanel>
    </Grid>
</Window>
